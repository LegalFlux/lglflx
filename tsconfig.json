{
  "compilerOptions": {
    "outDir": "./public", // Changed from ./dist to ./public
    // Removed duplicate baseUrl declaration
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./src", // Changed from "/" to "./src"
    "paths": {
      "@/*": ["./*"] // Updated path mapping
    },
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/serviceWorker.js"]
}
