{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    // Include all files in the src directory
    "src/**/*"
  ],
  "exclude": [
    // Exclude node_modules directory
    "node_modules",
    // Exclude test files
    "**/*.spec.ts"
  ]
}
